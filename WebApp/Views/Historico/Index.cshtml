@model WebApp.Models.HistoricoIndexViewModel

@{
    ViewData["Title"] = "Histórico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Histórico</h1>

<p>
    <div class="col-xl-2 col-lg-4">
        @Html.ActionLink("Inserir Nota", "Inserir", "NotaCorretagem", null, new { @class = "btn btn-primary" })
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">Data</th>
            <th class="text-right">Valor (R$)</th>
            <th class="text-right">Saldo Corretora (R$)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaHistoricoViewModel)
        {
            <tr>
                <td class="text-center">
                    @Html.Label(item.Data)
                </td>
                <td class="text-right">
                    @if (item.Negativo)
                    {
                        <div style="color:red">
                            @Html.Label(item.Valor)
                            @*@Html.ActionLink(item.Valor, "Editar", new { id = item.Data })*@
                        </div>
                    }
                    else
                    {
                        <div style="color:black">
                            @Html.Label(item.Valor)
                            @*@Html.ActionLink(item.Valor, "Editar", new { id = item.Data })*@
                        </div>
                    }
                </td>
                <td class="text-right">
                    @Html.Label(item.SaldoCorretora)
                    @*@Html.ActionLink(item.SaldoCorretora, "Editar", new { id = item.Data })*@

                </td>
            </tr>
        }
    </tbody>
</table>
