@model WebApp.Models.NotaCorretagemViewModel.NotaCorretagemIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Notas de Corretagem</h1>

<p>
    <div class="col-xl-2 col-lg-4">
        @Html.ActionLink("Inserir", "Inserir", "NotaCorretagem", null, new { @class = "btn btn-primary" })
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">Data</th>
            <th class="text-right">Contratos Negociados</th>
            <th class="text-right">Total Líquido</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListaNotaCorretagem) {
        <tr>
            <td class="text-center">
                @Html.ActionLink(item.Data.ToString("dd/MM/yyyy"), "Editar", new { id = item.ID })                
            </td>
            <td class="text-right">
                @Html.ActionLink(item.ContratosNegociados.ToString(), "Editar", new { id = item.ID})
            </td>
            <td class="text-right">
                @Html.ActionLink(item.TotalLiquidoNota.ToString(), "Editar", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
