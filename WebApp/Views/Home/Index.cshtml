@model WebApp.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<p>
    <div class="col-xl-2 col-lg-4">
        @Html.ActionLink("Inserir Nota", "Inserir", "NotaCorretagem", null, new { @class = "btn btn-primary" })
    </div>
</p>

<div class="container-fluid bg-3 text-center">
    <h3>Mercado Mini-Índices</h3><br>
    <div class="row">
        <div class="col-sm-3">
            <p class="p-3 mb-2 bg-info text-white">Saldo Corretora Atual</p>
            <p>@Html.Label(Model.SaldoCorretoraAtual)</p>
        </div>
        <div class="col-sm-3">
            <p class="p-3 mb-2 bg-info text-white">Saldo Total dos Trades</p>
            <p>@Html.Label(Model.SaldoTotalTrades)</p>
        </div>
        <div class="col-sm-3">
            <p class="p-3 mb-2 bg-info text-white">Maior Saldo Corretora</p>
            <p>@Html.Label(Model.MaiorSaldoCorretora)</p>
        </div>
        <div class="col-sm-3">
            <p class="p-3 mb-2 bg-info text-white">Menor Saldo Corretora</p>
            <p>@Html.Label(Model.MenorSaldoCorretora)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Média de ganhos</p>
            <p>@Html.Label(Model.MediaGanhos)</p>
        </div>
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Média de perdas</p>
            <p>@Html.Label(Model.MediaPerdas)</p>
        </div>
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Relação</p>
            <p>@Html.Label(Model.RelacaoGanhoPerda)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Quantidade ganhos</p>
            <p>@Html.Label(Model.QuantidadeGanhos)</p>
        </div>
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Quantidade de perdas</p>
            <p>@Html.Label(Model.QuantidadePerdas)</p>
        </div>
        <div class="col-sm-4">
            <p class="p-3 mb-2 bg-info text-white">Relação</p>
            <p>@Html.Label(Model.RelacaoQuantidadeGanhoPerda)</p>
        </div>
    </div>
</div>
<br>

<div class="container-fluid bg-3 text-center">
    <div class="row">
        <div class="col-sm-6">
            <p class="p-3 mb-2 bg-info text-white">Top 3 - Gain</p>
            <table class="table">
                <thead>

                    <tr>
                        <th class="text-center">
                            Dia
                        </th>
                        <th class="text-right">
                            Valor
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TopGain)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.Label(item.Key)
                            </td>
                            <td class="text-right">
                                @Html.Label(item.Value)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <p class="p-3 mb-2 bg-info text-white">Top 3 - Loss</p>
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">
                            Dia
                        </th>
                        <th class="text-right">
                            Valor
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TopLoss)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.Label(item.Key)
                            </td>
                            <td class="text-right">
                                @Html.Label(item.Value)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br>

